FROM mcr.microsoft.com/dotnet/sdk:9.0@sha256:3fcf6f1e809c0553f9feb222369f58749af314af6f063f389cbd2f913b4ad556 AS build
WORKDIR /App

COPY ./inventory-management-system ./

RUN dotnet restore

RUN dotnet publish -o out


FROM mcr.microsoft.com/dotnet/aspnet:9.0@sha256:b4bea3a52a0a77317fa93c5bbdb076623f81e3e2f201078d89914da71318b5d8
WORKDIR /App

ARG ASPNETCORE_ENVIRONMENT=Production
ARG DEFAULT_CONNECTION
ARG AUTHENTICATION__DEFAULTSCHEME
ARG AUTHENTICATION__SCHEMES__BEARER__ISSUERSIGNINGKEY
ARG AUTHENTICATION__SCHEMES__BEARER__VALIDAUDIENCE
ARG AUTHENTICATION__SCHEMES__BEARER__VALIDAUDIENCES__0
ARG AUTHENTICATION__SCHEMES__BEARER__VALIDISSUER

ENV ASPNETCORE_ENVIRONMENT=$ASPNETCORE_ENVIRONMENT
ENV ConnectionStrings__DefaultConnection=$DEFAULT_CONNECTION
ENV Authentication__DefaultScheme=$AUTHENTICATION__DEFAULTSCHEME
ENV Authentication__Schemes__Bearer__IssuerSigningKey=$AUTHENTICATION__SCHEMES__BEARER__ISSUERSIGNINGKEY
ENV Authentication__Schemes__Bearer__ValidAudience=$AUTHENTICATION__SCHEMES__BEARER__VALIDAUDIENCE
ENV Authentication__Schemes__Bearer_ValidAudiences__0=$AUTHENTICATION__SCHEMES__BEARER__VALIDAUDIENCES__0
ENV Authentication__Schemes__Bearer__ValidIssuer=AUTHENTICATION__SCHEMES__BEARER__VALIDISSUER 

COPY --from=build /App/out .
ENTRYPOINT ["dotnet", "inventory-management-system.dll"]